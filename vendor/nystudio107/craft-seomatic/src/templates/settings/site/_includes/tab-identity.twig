{% from "seomatic/settings/_includes/macros.twig" import configWarning %}
{% import "_includes/forms" as forms %}

{% namespace "site" %}
    {{ forms.textField({
        label: "Site Name"|t("seomatic"),
        instructions: "The public name of the website; this is appended to the page title by default."|t("seomatic"),
        id: "siteName",
        name: "siteName",
        value: site.siteName,
        warning: false,
    }) }}
{% endnamespace %}

{% set entity = site.identity %}
{% namespace "site[identity]" %}

    {############### Main Entity of Page ###############}

    {% include "seomatic/settings/_includes/mainEntityOfPage-partial.twig" with {
        "mainEntityOfPage": entity,
        "mainEntityTitle": "Site Owner Entity Type",
        "mainEntityDescription": "The type of entity that owns this website.",
    } %}

    {% include "seomatic/settings/site/_includes/entity-partial.twig" with {"pageContext": "identity"} %}
{% endnamespace %}
